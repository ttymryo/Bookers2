<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <div>
    <label for="user_name">Name</label>
    <%= f.text_field :name, id:"user_name" %>
  </div>
  <div>
    <label for="user_image">Image</label>
    <%= f.file_field :profile_image, id:"user_profile_image", accept: "image/*"%>
  </div>
  <div>
    <label for="user_introduction">introduction</label>
    <%= f.text_area :introduction,  id:"user_introduction" %>
  </div>
  <div>
    <%= f.submit"Update User" %>
  </div>
<% end %>